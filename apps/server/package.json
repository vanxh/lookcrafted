{
	"name": "server",
	"main": "api/index.ts",
	"type": "module",
	"scripts": {
		"check-types": "tsc --noEmit",
		"build": "tsc && tsc-alias",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./api/index.ts --outfile server",
		"dev": "bun run --hot api/server.ts",
		"start": "bun run dist/api/index.js",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@better-auth/expo": "^1.2.7",
		"@orpc/client": "^1.1.1",
		"@orpc/server": "^1.1.1",
		"@t3-oss/env-core": "^0.13.4",
		"better-auth": "^1.2.7",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.4",
		"hono": "^4.7.6",
		"pg": "^8.14.1",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"tsc-alias": "^1.8.11",
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"drizzle-kit": "^0.30.5",
		"@types/pg": "^8.11.11"
	}
}
