{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["api/*"]
		},
		"outDir": "./dist",
		"types": ["bun"],
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	},
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"include": ["api/**/*.ts", "emails/**/*.tsx"]
}
